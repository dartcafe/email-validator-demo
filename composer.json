{
    "name": "dartcafe/email-validator-demo",
    "description": "Demo app for the local email validator package",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "RenÃ© Gieling"
        }
    ],
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.68",
        "swagger-api/swagger-ui": "^5.17",
        "vimeo/psalm": "^5.25",
        "zircote/swagger-php": "^4.9"
    },
    "autoload-dev": {
        "psr-4": {
            "Dartcafe\\EmailValidator\\Demo\\Docs\\": "docs/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "preferred-install": {
            "*": "dist"
        }
    },
    "require": {
        "php": ">=8.1",
        "dartcafe/email-validator": "^0.2.0"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Dartcafe\\EmailValidator\\Demo\\": "src/Demo/"
        }
    },
    "suggest": {
        "ext-zip": "Needed for ZIP import/export in the demo UI"
    },
    "scripts": {
        "serve": "php -S 0.0.0.0:8081 -t public",
        "stop": "pkill -f 'php -S .*:8081' || true",
        "restart": [
            "@stop",
            "@serve"
        ],
        "docs": [
            "@docs:assets",
            "@docs:sync"
        ],
        "docs:sync": "php scripts/sync-openapi.php",
        "docs:assets": "php scripts/sync-swagger-ui.php",
        "build": [
            "composer dump-autoload -o",
            "@cs",
            "@psalm:check",
            "@build:package"
        ],
        "build:package": "bash scripts/build-package.sh",
        "cs": "php-cs-fixer fix --diff --dry-run --verbose",
        "cs:fix": "php-cs-fixer fix",
        "psalm": "psalm",
        "psalm:all": [
            "composer dump-autoload -o",
            "@psalm:cache",
            "@psalm:info"
        ],
        "psalm:cache": "psalm --clear-cache",
        "psalm:info": "psalm --show-info=true",
        "psalm:fix": "psalm --alter --issues=MissingReturnType,InvalidReturnType,InvalidNullableReturnType,MismatchingDocblockParamType,MismatchingDocblockReturnType,MissingParamType,InvalidFalsableReturnType",
        "post-install-cmd": [
            "@docs:assets",
            "@docs:sync",
            "composer dump-autoload -o"
        ],
        "post-update-cmd": [
            "@docs:assets",
            "@docs:sync",
            "composer dump-autoload -o"
        ]
    }
}